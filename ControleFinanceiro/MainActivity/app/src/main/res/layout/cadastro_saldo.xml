<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_foreground"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Cadastro.CadastroSaldo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ADICIONAR SALDO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#03122F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16sp"
            android:text="SELECIONE O MES DO SALDO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#03122F" />

        <Spinner
            android:id="@+id/SpinnerMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edtCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Categoria"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descrição"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#03122F"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VALOR DO SALDO: "
            android:inputType="numberSigned"
            android:textColor="@color/colorAccent" />

        <CheckBox
            android:id="@+id/checkboxAtivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SALDO ATIVO" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnSalvar"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:background="@android:color/holo_blue_dark"
            android:drawableLeft="@android:drawable/ic_menu_revert"
            android:text="VOLTAR"
            android:textColor="#03122F" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/btnVoltar"
            android:layout_toRightOf="@+id/btnVoltar"
            android:background="@android:color/holo_blue_dark"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="SALVAR"
            android:textColor="#03122F" />
    </LinearLayout>

</LinearLayout>